<% layout("layouts/boilerplate") -%>

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="text-center p-4 rounded-4 shadow-sm bg-white" style="max-width: 420px;">
    <h1 class="display-4 fw-bold text-primary mb-2"><%= statusCode %></h1>
    <h2 class="h4 mb-3">
      <%= statusCode === 404 ? "Page not found" : "Something went wrong" %>
    </h2>
    <p class="text-muted mb-4"><%= message %></p>
    <a href="/listings" class="btn btn-primary px-4">
      ← Back to listings
    </a>
  </div>
</div>
