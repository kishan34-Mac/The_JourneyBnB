<% layout("layouts/boilerplate") -%>

<div class="row g-3">
  <% for (let listing of allListings) { %>
    <div class="col-md-4">
      <div class="card listing-card">
        <img
          src="<%= listing.image
                  ? (typeof listing.image === 'object'
                        ? listing.image.url
                        : listing.image)
                  : 'https://images.unsplash.com/photo-1501785888041-af3ef2552f18' %>"
          class="card-img-top listing-img"
          alt="<%= listing.title %>"
        >
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-price">â‚¹ <%= listing.price %>/night</p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary">View details</a>
        </div>
      </div>
    </div>
  <% } %>
</div>
