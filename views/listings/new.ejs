<% layout("layouts/boilerplate") -%>

<div class="new-listing-container">
  <div class="form-header">
    <h1><span class="icon">âœ¨</span> Create Your Listing</h1>
    <p>Share your space with travelers around the world</p>
  </div>

  <div class="form-card">
    <form action="/listings" method="POST" class="listing-form">
      
      <!-- Title Input -->
      <div class="form-group">
        <label for="title" class="form-label">
          <span class="label-icon">ğŸ </span>
          Property Title
        </label>
        <input 
          id="title" 
          name="listing[title]" 
          type="text" 
          class="form-control"
          placeholder="e.g., Cozy Beachfront Villa"
          required 
        />
      </div>

      <!-- Description Input -->
      <div class="form-group">
        <label for="description" class="form-label">
          <span class="label-icon">ğŸ“</span>
          Description
        </label>
        <textarea
          id="description"
          name="listing[description]"
          rows="5"
          class="form-control"
          placeholder="Describe your property, amenities, and what makes it special..."
          required
        ></textarea>
      </div>

      <!-- Image URL Input -->
      <div class="form-group">
        <label for="image" class="form-label">
          <span class="label-icon">ğŸ“¸</span>
          Image URL
        </label>
        <input 
          id="image" 
          name="listing[image]" 
          type="url" 
          class="form-control"
          placeholder="https://example.com/image.jpg"

        />
      </div>

      <!-- Price and Location Row -->
      <div class="form-row">
        <div class="form-group form-group-half">
          <label for="price" class="form-label">
            <span class="label-icon">ğŸ’°</span>
            Price per Night
          </label>
          <div class="input-with-currency">
            <span class="currency-symbol">â‚¹</span>
            <input
              id="price"
              name="listing[price]"
              type="number"
              min="0"
              step="100"
              class="form-control form-control-price"
              placeholder="1000"
              required
            />
          </div>
        </div>

        <div class="form-group form-group-half">
          <label for="location" class="form-label">
            <span class="label-icon">ğŸ“</span>
            Location
          </label>
          <input 
            id="location" 
            name="listing[location]" 
            type="text" 
            class="form-control"
            placeholder="e.g., Goa, India"
            required 
          />
        </div>
      </div>

      <!-- Country Input -->
      <div class="form-group">
        <label for="country" class="form-label">
          <span class="label-icon">ğŸŒ</span>
          Country
        </label>
        <input 
          id="country" 
          name="listing[country]" 
          type="text" 
          class="form-control"
          placeholder="e.g., India"
          required 
        />
      </div>

      <!-- Action Buttons -->
      <div class="form-actions">
        <button type="submit" class="btn btn-submit">
          <span class="btn-icon">âœ“</span>
          Create Listing
        </button>
        <a href="/listings" class="btn btn-cancel">
          <span class="btn-icon">â†</span>
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
